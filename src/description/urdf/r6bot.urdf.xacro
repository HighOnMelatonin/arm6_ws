<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro" name="r6bot">
  <xacro:arg name="use_gazebo" default="true" />
  <!-- Import r6bot macro -->
  <xacro:include filename="$(find arm6)/arm6/urdf/arm6dof_description.urdf.xacro" />
  <xacro:include filename="$(find arm6)/arm6/urdf/carlikebot_description.urdf.xacro" />
  <xacro:include filename="$(find arm6)/arm6/urdf/carlikebot.materials.xacro" />
  <!-- create link fixed to the "world" -->
  <link name="world" />

