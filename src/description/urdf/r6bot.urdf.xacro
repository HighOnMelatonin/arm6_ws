    <xacro:carbot />

  </xacro:if> -->
  
  <xacro:carlikebot />

  <joint name="connection2" type="fixed">
    <parent link="chassis_link" />
    <child link="environment2" />
    <origin xyz="70 0 107" rpy="0 0 1.5707" />
  </joint>
  <link name="environment2" />

  <xacro:arm6_description />

  <!-- Import r6bot ros2_control description -->
  <xacro:include
    filename="$(find arm6)/ros2_control/r6bot.ros2_control.xacro" />
  <xacro:r6bot_ros2_control name="r6bot" />



</robot>